<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/username"
        android:textColor="@color/teal_200"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/message"
        android:textSize="15sp" />

    <ru.tinkoff.android.homework_2.customviews.FlexBoxLayout
        android:id="@+id/emoji_box"
        android:layout_width="300dp"
        android:layout_height="wrap_content" >

        <ru.tinkoff.android.homework_2.customviews.EmojiWithCountView
            style="@style/EmojiWithCountView"
            android:id="@+id/emoji"
            app:emojiCode="😀"
            app:emojiCount="9" />

        <ru.tinkoff.android.homework_2.customviews.EmojiWithCountView
            style="@style/EmojiWithCountView"
            android:id="@+id/emoji2"
            app:emojiCode="🤣"
            app:emojiCount="9" />

        <ru.tinkoff.android.homework_2.customviews.EmojiWithCountView
            style="@style/EmojiWithCountView"
            android:id="@+id/emoji3"
            app:emojiCode="🤐"
            app:emojiCount="10" />

        <ru.tinkoff.android.homework_2.customviews.EmojiWithCountView
            style="@style/EmojiWithCountView"
            android:id="@+id/emoji4"
            app:emojiCode="😱"
            app:emojiCount="9" />

        <ru.tinkoff.android.homework_2.customviews.EmojiWithCountView
            style="@style/EmojiWithCountView"
            android:id="@+id/emoji5"
            app:emojiCode="😡"
            app:emojiCount="3" />

        <ru.tinkoff.android.homework_2.customviews.EmojiWithCountView
            style="@style/EmojiWithCountView"
            android:id="@+id/emoji6"
            app:emojiCode="🤢"
            app:emojiCount="2" />

        <ImageView
            android:id="@+id/add_emoji"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_emoji_with_count"
            android:padding="5dp"
            android:src="@drawable/baseline_add_20" />

    </ru.tinkoff.android.homework_2.customviews.FlexBoxLayout>

</merge>