<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/message_background">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/teal_500"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/whiteVariant"
            android:textSize="15sp" />

    </LinearLayout>

    <ru.tinkoff.android.homework_2.ui.customviews.FlexBoxLayout
        android:id="@+id/emoji_box"
        android:layout_width="wrap_content"
        app:flexBoxMaxWidth="250dp"
        android:layout_height="wrap_content" >

        <ru.tinkoff.android.homework_2.ui.customviews.EmojiWithCountView
            style="@style/Widget.HomeWork_2.EmojiWithCountView"
            android:id="@+id/emoji"
            app:emojiCode="😀"
            app:emojiCount="9" />

        <ru.tinkoff.android.homework_2.ui.customviews.EmojiWithCountView
            style="@style/Widget.HomeWork_2.EmojiWithCountView"
            android:id="@+id/emoji2"
            app:emojiCode="🤣"
            app:emojiCount="9" />

        <ru.tinkoff.android.homework_2.ui.customviews.EmojiWithCountView
            style="@style/Widget.HomeWork_2.EmojiWithCountView"
            android:id="@+id/emoji3"
            app:emojiCode="🤐"
            app:emojiCount="10" />

        <ru.tinkoff.android.homework_2.ui.customviews.EmojiWithCountView
            style="@style/Widget.HomeWork_2.EmojiWithCountView"
            android:id="@+id/emoji4"
            app:emojiCode="😱"
            app:emojiCount="9" />

        <ru.tinkoff.android.homework_2.ui.customviews.EmojiWithCountView
            style="@style/Widget.HomeWork_2.EmojiWithCountView"
            android:id="@+id/emoji5"
            app:emojiCode="😡"
            app:emojiCount="3" />

        <ru.tinkoff.android.homework_2.ui.customviews.EmojiWithCountView
            style="@style/Widget.HomeWork_2.EmojiWithCountView"
            android:id="@+id/emoji6"
            app:emojiCode="🤢"
            app:emojiCount="2" />

        <ImageView
            android:id="@+id/add_emoji"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_emoji_with_count"
            android:padding="5dp"
            android:src="@drawable/baseline_add_20"
            app:tint="@color/white"/>

    </ru.tinkoff.android.homework_2.ui.customviews.FlexBoxLayout>

</merge>