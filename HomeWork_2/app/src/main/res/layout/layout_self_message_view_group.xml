<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding ="8dp"
        android:background="@drawable/self_message_background"
        android:textColor="@color/whiteVariant"
        android:textSize="15sp" />

    <ru.tinkoff.android.homework_2.ui.customviews.FlexBoxLayout
        android:id="@+id/emoji_box"
        android:layout_width="250dp"
        android:layout_height="wrap_content" >

        <ru.tinkoff.android.homework_2.ui.customviews.EmojiWithCountView
            style="@style/Widget.HomeWork_2.EmojiWithCountView"
            android:id="@+id/emoji"
            app:emojiCode="ðŸ˜€"
            app:emojiCount="9" />

        <ImageView
            android:id="@+id/add_emoji"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_emoji_with_count"
            android:padding="5dp"
            android:src="@drawable/baseline_add_20"
            app:tint="@color/white"/>

    </ru.tinkoff.android.homework_2.ui.customviews.FlexBoxLayout>

</merge>